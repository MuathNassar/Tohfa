<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defultbckground"
    tools:context=".ui_elements.user.fragment.ProductFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/frProduct_recyclerHorizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/best_seller"
          android:fontFamily="@font/titlesfont"
          android:textColor="@color/primary"
          android:textSize="@dimen/_20ssp"
          android:layout_marginStart="@dimen/_10sdp"
          android:layout_marginBottom="@dimen/_15sdp"/>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/frProduct_recyclerVertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

   </LinearLayout>

</ScrollView>