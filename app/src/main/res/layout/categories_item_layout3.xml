<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="@dimen/_3sdp"
    android:id="@+id/categories_item_layout3_card">

    <RelativeLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_180sdp"
        android:orientation="vertical"
        android:background="@drawable/shape_detailes_img_background">

        <FrameLayout
            android:id="@+id/categories_item_layout3_fram"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            >
            <ProgressBar
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/categories_item_layout3_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/categories_item_layout3_fram"
            android:gravity="center">
            <TextView
                android:id="@+id/categories_item_layout3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/titlesfont"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                />

            <TextView
                android:id="@+id/categories_item_layout3_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:fontFamily="@font/titlesfont"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
               />
        </LinearLayout>



        <ImageView
            android:id="@+id/categories_item_layout3_btn_favorite"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_favorite2"
            android:padding="@dimen/_1sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>