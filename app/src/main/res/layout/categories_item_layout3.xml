<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_180sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/categories_item_layout3_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/test_img"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/categories_item_layout3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shirt"
            android:fontFamily="@font/titlesfont"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/categories_item_layout3_img"/>
        <TextView
            android:id="@+id/categories_item_layout3_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20$"
            android:fontFamily="@font/titlesfont"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/categories_item_layout3_title"/>

        <ImageView
            android:id="@+id/categories_item_layout3_btn_favorite"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_favorite_border"
            android:padding="@dimen/_1sdp"
            android:background="@drawable/shape_white_oval_background"
            android:elevation="0.5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>