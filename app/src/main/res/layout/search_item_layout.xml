<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_2sdp">
    <RelativeLayout
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/search_item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:src="#f00"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/search_item_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:fontFamily="@font/titlesfont"
            android:textSize="@dimen/_25ssp"
            android:textColor="@color/black"
            android:layout_below="@+id/search_item_img"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/search_item_txt_rate"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:text="5"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/primary"
            android:layout_below="@+id/search_item_img"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/ic_star"
            android:paddingStart="@dimen/_17sdp"
            android:paddingTop="@dimen/_15sdp"
            />
        <TextView
            android:id="@+id/search_item_txt_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$99.5"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/black"
            android:layout_below="@+id/search_item_txt_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="@dimen/_10sdp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>